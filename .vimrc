call plug#begin('~/.vim/plugged')
" Your plugin installations go here, for example:
Plug 'preservim/nerdtree'
call plug#end()

set number
" set relativenumber

syntax on

set autoindent
set smartindent

set cursorline
set hlsearch

set ignorecase
set smartcase

" set tabstop=4
" set shiftwidth=4
" set expandtab

set mouse=a

set undofile

set laststatus=2
set showmatch

set nowrap
set clipboard=unnamedplus

set lazyredraw

set wildmenu

